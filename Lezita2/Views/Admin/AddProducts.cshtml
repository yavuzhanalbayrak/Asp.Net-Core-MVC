@model Product
<!DOCTYPE html>
<html style="font-size: 16px;" lang="tr">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta charset="utf-8">
    <meta name="keywords" content="INTUITIVE">
    <meta name="description" content="">
    <title>Admin</title>

    <link rel="stylesheet" href="~/css/Kategoriler.css" media="screen">
    <meta name="generator" content="Nicepage 5.19.3, nicepage.com">
    <link id="u-theme-google-font" rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:100,100i,300,300i,400,400i,500,500i,700,700i,900,900i|Open+Sans:300,300i,400,400i,500,500i,600,600i,700,700i,800,800i">
    <link id="u-page-google-font" rel="stylesheet" href="https://fonts.googleapis.com/css?family=Merriweather:300,300i,400,400i,700,700i,900,900i">

    <meta name="theme-color" content="#478ac9">
    <meta property="og:title" content="Kategoriler">
    <meta property="og:type" content="website">
    <meta data-intl-tel-input-cdn-path="intlTelInput/">
</head>
<body data-path-to-root="/" class="u-body u-xl-mode" data-lang="tr">

    <div class=" mt-5 row">
        <div class="col-4"></div>
        <div class="col-4">
            <form asp-controller="Admin" asp-action="AddProducts" method="post">
                <div class="mb-2">
                    <label for="exampleInputEmail1" class="form-label">Ürün Adı:</label>
                    <input asp-for="Name" type="text" class="form-control" aria-describedby="emailHelp">
                </div>
                <div class="mb-2">
                    <label for="exampleInputPassword1" class="form-label">Ürün Açıklaması:</label>
                    <input asp-for="Description" type="text" class="form-control" id="exampleInputPassword1">
                </div>
                <div class="mb-2">
                    <label for="exampleInputPassword1" class="form-label">Ürün Resmi:</label>
                    <input asp-for="Image" type="text" class="form-control" id="exampleInputPassword1">
                </div>
                <div class="mb-2">
                    <label for="exampleInputPassword1" class="form-label"></label>
                    <select asp-for="CategoryId" class="form-select" aria-label="Default select example">
                        <option selected>Kategoriler</option>
                        @foreach (var category in ViewBag.Categories)
                        {
                            <option value=@category.Id>@category.Name</option>
                        }
                    </select>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
        <div class="col-4"></div>


    </div>

</body>
</html>
@model CategoryUpdateVM
<!DOCTYPE html>
<html style="font-size: 16px;" lang="tr">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta charset="utf-8">
    <meta name="keywords" content="INTUITIVE">
    <meta name="description" content="">
    <title>Admin</title>

    <link rel="stylesheet" href="~/css/Kategoriler.css" media="screen">
    <meta name="generator" content="Nicepage 5.19.3, nicepage.com">
    <link id="u-theme-google-font" rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:100,100i,300,300i,400,400i,500,500i,700,700i,900,900i|Open+Sans:300,300i,400,400i,500,500i,600,600i,700,700i,800,800i">
    <link id="u-page-google-font" rel="stylesheet" href="https://fonts.googleapis.com/css?family=Merriweather:300,300i,400,400i,700,700i,900,900i">

    <meta name="theme-color" content="#478ac9">
    <meta property="og:title" content="Kategoriler">
    <meta property="og:type" content="website">
    <meta data-intl-tel-input-cdn-path="intlTelInput/">

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</head>
<body data-path-to-root="/" class="u-body u-xl-mode" data-lang="tr">

    <div class=" mt-5 row">
        <div class="col-4"></div>
        <div class="col-4">
            <form asp-controller="Admin" asp-action="UpdateCategories" method="post" enctype="multipart/form-data">
                <div class="mb-2">
                    <label for="exampleInputEmail1" class="form-label"><h5>Kategori Adı:</h5></label>
                    <input asp-for="Name" type="text" class="form-control" aria-describedby="emailHelp">
                    <span class="text-danger" asp-validation-for="Name"></span>
                </div>
                <div class="mb-2">
                    <label for="exampleInputPassword1" class="form-label"><h5>Kategori Resmi:</h5></label>
                    <input asp-for="Image" type="file" class="form-control" id="exampleInputPassword1">
                    <span class="text-danger" asp-validation-for="Image"></span>

                </div>
                <div class="mb-2">
                    <label for="exampleInputPassword1" class="form-label"><h5>Kategori Arkaplan Resmi:</h5></label>
                    <input asp-for="BackGroundImage" type="file" class="form-control" id="exampleInputPassword1">
                    <span class="text-danger" asp-validation-for="BackGroundImage"></span>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
                <a asp-controller="Admin" asp-action="GetCategories" class="btn btn-secondary">Geri</a>

            </form>
        </div>
        <div class="col-4"></div>
    </div>

</body>
</html>